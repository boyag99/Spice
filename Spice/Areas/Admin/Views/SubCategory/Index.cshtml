@model IEnumerable<Spice.Areas.Admin.ViewModel.SubCategoryVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info"> Sub Category List </h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(model => model.SubCategoryName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CategoryName)
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.SubCategoryName)
                </td>
                <td>
                    @Html.DisplayFor(model => item.CategoryName)
                </td>
                <partial name="_TableButtonPartial" model="@item.SubCategoryId" />
            </tr>
                }
            </table>
        }
        else
        {
            <p>No sub category exist...</p>
        }
    </div>
</div>
