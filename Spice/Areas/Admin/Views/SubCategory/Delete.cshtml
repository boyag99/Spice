@model Spice.Areas.Admin.ViewModel.SubCategoryVM

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Delete Sub Category</h2>
<br />

<form asp-action="Delete" method="post">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="SubCategoryName" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="SubCategoryName" class="form-control" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CategoryName" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="CategoryName" class="form-control" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-danger form-control" asp-route-id="@Model.SubCategoryId" value="Delete" />
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-success form-control">Back to list</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>