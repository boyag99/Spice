@model Spice.Areas.Admin.ViewModel.SubCategoryVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Details Category</h2>
<br />

<div class="border backgroundWhite">
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="SubCategoryName" class="col-form-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="SubCategoryName" class="form-control" readonly />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="CategoryName" class="col-form-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="CategoryName" class="form-control" readonly />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-5 offset-2">
            <div class="row">
                <div class="col-6">
                    <a class="btn btn-info form-control" asp-action="Edit" asp-controller="SubCategory" asp-route-id="@Model.SubCategoryId">Edit</a>
                </div>
                <div class="col-6">
                    <a asp-action="Index" class="btn btn-success form-control">Back to list</a>
                </div>
            </div>
        </div>
    </div>
</div>